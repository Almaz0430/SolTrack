// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drop {
  id            String   @id @default(cuid())
  name          String
  artist        String
  price         String   // Храним как строку для точности
  totalSupply   Int
  mintedSupply  Int      @default(0)
  status        DropStatus @default(DRAFT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  artistRoyalty String   // Процент роялти артиста
  platformFee   String   // Процент комиссии платформы
  description   String?
  imageUrl      String?
  musicUrl      String?

  // Связи
  transactions  Transaction[]

  @@map("drops")
}

model Transaction {
  id            String   @id @default(cuid())
  signature     String   @unique // Подпись транзакции в блокчейне
  type          TransactionType
  amount        String   // Сумма в SOL (строка для точности)
  status        TransactionStatus @default(PENDING)
  buyerAddress  String?  // Адрес покупателя
  sellerAddress String?  // Адрес продавца
  dropId        String?  // ID связанного дропа
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Связи
  drop          Drop?    @relation(fields: [dropId], references: [id])

  @@map("transactions")
}

enum DropStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

enum TransactionType {
  PURCHASE
  MINT
  TRANSFER
  REFUND
  DROP_CREATED
}

enum TransactionStatus {
  PENDING
  CONFIRMED
  FAILED
  CANCELLED
}
