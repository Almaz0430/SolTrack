// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drop {
  id            String   @id @default(cuid())
  name          String
  artist        String
  price         String   // Храним как строку для точности
  totalSupply   Int
  mintedSupply  Int      @default(0)
  status        DropStatus @default(DRAFT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  artistRoyalty String   // Процент роялти артиста
  platformFee   String   // Процент комиссии платформы
  description   String?
  imageUrl      String?
  musicUrl      String?

  @@map("drops")
}

enum DropStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}
